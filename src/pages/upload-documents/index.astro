---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Card from "../../components/Card.astro";
import Radio from "../../components/Radio.astro";
import Button from "../../components/Button.astro";
---

<BaseLayout pageTitle="Subir documentos">
  <Card classes="flex-col items-center m-4 sm:my-16">
      <p class="text-center text-lg w-full mb-8 text-gray-600 font-figtree-semibold font-semibold">Comienza tu proceso<span id="process" class="font-figtree-semibold font-semibold text-indigo-500"> </span>subiendo tus archivos</p>
      <form action="#" class="flex flex-col items-center w-full gap-4 font-figtree-normal normal">
        <div class="flex flex-col gap-2 w-full">
          <p>Selecciona tu proceso</p>
          <div class="flex gap-2 flex-wrap">
            <Radio name="process" id="inscription" text="Inscripción"/>
            <Radio name="process" id="registration" text="Matrícula nuevos"/>
            <Radio name="process" id="renovation" text="Renovación"/>
            <Radio name="process" id="reintegration" text="Reintegro"/>
          </div>
        </div>
        <div class="flex flex-col w-full text-sm sm:text-md">
          <p class="text-md">Archivos</p>
          <div id="files" class="flex flex-col text-gray-500 gap-2">

          </div>
          <div class="hidden mt-4">
            <span class="font-figtree-semibold font-semibold">Nota: </span><span id="note"></span>
          </div>
        </div>
        <Button>
          Subir documentos
        </Button>
      </form>
  </Card>
</BaseLayout>

<style>
  input[type="radio"]:checked + label {
    
  }
</style>

<script src="../../scripts/processes.js"></script>
