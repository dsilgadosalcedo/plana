---
import Card from "./Card.astro";
import Button from "./Button.astro";

const {title} = Astro.props
---

<Card h="sm:h-44" w="sm:w-96">
  <slot name="svg" />
  <div class="flex flex-col">
    <h2 class="text-gray-600 text-lg font-figtree-semibold font-semibold">{title}</h2>
    <p class="text-sm text-gray-500 font-normal font-figtree-normal">
      <slot name="p"/>
    </p>
    <div class="flex items-end flex-grow">
      <Button classes="arrow flex items-center text-sm gap-2">
        <span class="flex-grow">Comenzar</span>
        <div class="w-4">
          <svg viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4">
            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd">
            </path>
            </svg>
        </div>
      </Button>
    </div>
  </div>
</Card>